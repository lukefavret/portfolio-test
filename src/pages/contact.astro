---
import BaseLayout from '../layouts/BaseLayout.astro';
import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import EmailObfuscator from '../components/EmailObfuscator';
import Button from '../components/Button.astro';
---
<BaseLayout title="Contact">
  <SiteHeader />
  <main id="main" class="max-w-3xl mx-auto p-4 text-center">
    <h1 class="font-serif text-4xl mb-4">Contact</h1>
    <p class="mb-4">
      I'm always open to discussing new opportunities or interesting projects.
      I also welcome students and peers to reach out if they'd like to share notes or have any questions.
      The best way to reach me is via email.
    </p>
    <p class="text-2xl mb-8">
      <EmailObfuscator client:load user="EMAIL_USER_HERE" domain="EMAIL_DOMAIN_HERE" />
    </p>
    <p class="mb-4">Feel free to connectâ€¦</p>
    <div class="flex justify-center gap-4">
      <Button href="https://linkedin.com" variant="secondary">LinkedIn</Button>
      <Button href="https://github.com" variant="secondary">GitHub</Button>
    </div>
  </main>
  <SiteFooter />
</BaseLayout>
