---
// src/components/ui/MetaBar.astro

/**
 * Metadata Bar Component
 *
 * A full-width bar used at the top of case study pages to display
 * key metadata about the project, such as the discipline and publish date.
 * It's styled to match the editorial, "patent document" aesthetic.
 *
 * Props:
 * - `discipline`: The role or area of focus for the project.
 * - `publishedDate`: The date the project was published.
 */

// --- PROPS ---
export interface Props {
  /** The discipline, e.g., "UX Design / Full Stack Dev." */
  discipline: string;
  /** The human-readable publish date, e.g., "September 2025" */
  publishedDate: string;
}

const { discipline, publishedDate } = Astro.props;
---

<div class="border-b border-text/20 py-4 font-mono text-sm uppercase">
  <div
    class="mx-auto flex max-w-7xl flex-col items-start justify-between gap-2 px-4 sm:flex-row sm:items-center sm:px-6 lg:px-8"
  >
    <!-- Left side: Discipline -->
    <span>{discipline}</span>
    <!-- Right side: Published Date -->
    <time>{publishedDate}</time>
  </div>
</div>
