---
/** Navigation link with active-route awareness. */
export interface Props {
  href: string;
  text: string;
}
const { href, text } = Astro.props as Props;
const isActive = Astro.url.pathname === href;
---
<li>
  <a
    href={href}
    class:list={[
      'px-3 py-2 block',
      isActive ? 'font-bold text-accent' : 'hover:text-accent',
    ]}
    aria-current={isActive ? 'page' : undefined}
    >{text}</a
  >
</li>
